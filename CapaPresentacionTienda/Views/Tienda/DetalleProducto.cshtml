
@{
    ViewData["Title"] = "DetalleProducto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Product section-->
<section class="py-5">
    <div class="px-4 px-lg-5 my-5 container">
        <div class="row gx-4 gx-lg-5 align-items-center">
            <div class="col-md-6"><img class="card-img-top mb-5 mb-md-0" src="data:image/@Model.Extension;base64,@Model.Base64" alt="..." /></div>
            <div class="col-md-6">
                <div class="small mb-1">@Model.oMarca.Descripcion</div>
                <h1 class="display-5 fw-bolder">@Model.Nombre</h1>
                <div class="fs-5 mb-5">
                    @* <span class="text-decoration-line-through">$45.00</span> *@
                    <span>@Model.Precio</span>
                </div>
                <p class="lead">@Model.Descripcion</p>
                <div class="d-flex">
                   <a href="@Url.Action("Index","Tienda")" class="btn btn-outline-danger w-50 me-3 text-center">
                       <i class="fas fa-undo-alt"></i>Volver
                   </a>
                    @if ((ViewBag.ClienteEnSesion as bool?) ?? true)
                    {
                        <button class="btn btn-outline-success agregarcarrito w-50 flex-shrink-0" type="button" data-idproducto ="@Model.IdProducto">
                            <i class="fas fa-cart-plus"></i>
                            Agregar al carrito
                        </button>
                    }
                    else
                    {
                        
                    }

                </div>
            </div>
        </div>
    </div>
</section>

